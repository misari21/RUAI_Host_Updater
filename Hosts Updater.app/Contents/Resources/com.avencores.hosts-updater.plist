<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.avencores.hosts-updater</string>

  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/sbin/update-avencores-hosts.sh</string>
  </array>

  <key>RunAtLoad</key>
  <true/>

  <key>StartInterval</key>
  <integer>3600</integer>

  <key>StandardOutPath</key>
  <string>/var/log/avencores-hosts-updater.log</string>

  <key>StandardErrorPath</key>
  <string>/var/log/avencores-hosts-updater.err</string>
</dict>
</plist>
